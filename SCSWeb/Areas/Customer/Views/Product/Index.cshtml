@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@model IEnumerable<Product>


<form asp-area="Customer" asp-controller="Product" asp-action="Index" class="border border-1 bg-light mb-2">
    <div class="container">
        <div class="row col-12">
            <div class="m-2">
                <label for="search" class="form-check-label"><strong>Product:</strong></label>
                <input id="search" class="form-control col-8" type="text" name="search" placeholder="Search in Products Description" aria-label="Product Search">
@*                 <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
 *@            </div>
        </div>
        <div class="row">
            <div class="col-4 m-2">
                <button type="submit" value="search" class="btn btn-outline-primary col-6">
                    Search
                </button>
            </div>
            <div class="col">
                <span class="text-danger">@ViewBag.Message </span>
            </div>
        </div>
    </div>
</form>

@* Show Products ---------------- *@
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 row-cols-lg-5 g-2">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <a asp-action="Details" asp-route-productId="@product.Id" class="btn form-control">
                        @* Lazy loading and alt attribute for better performance and SEO *@
                        @if (product.ProductImages != null && product.ProductImages.Count > 0)
                        {
                            <img src="@product.ProductImages.FirstOrDefault().ImageUrl" class="card-img-top" alt="@product.Name image" loading="lazy" />
                        }
                        else
                        {
                            <img src="https://placehold.co/600x400/png" class="card-img-top" alt="Default product image" loading="lazy" />
                        }

                        <h6 class="card-title text-dark text-center mt-2">@product.Name</h6>
                        <p class="card-text text-warning text-center"><b>@product.Provider.Name</b></p>
                        <p class="card-text text-success text-center"><b>@product.Category.Name</b></p>
                        @* Improved price formatting *@
                        <div class="text-center">Price: <span>@string.Format("{0:C}", product.Price)</span></div>
                    </a>
                </div>
                
                @* Buttons ---------------------------------- *@
                <div class="card-footer border">
                    <div class="row">
                        <div class="col">
                            <a asp-area="Customer" asp-controller="Product" asp-action="Details" 
                                asp-route-productId="@product.Id" class="btn btn-primary form-control">
                                Details
                            </a>
                        </div>
                
                        <div class="col">
                        @*     @if (SignInManager.IsSignedIn(User))
                            @* {   *@
                            @* Add to Cart button with icon  *@
                                <a asp-area="Customer" asp-controller="Product" asp-action="AddToCart" asp-route-productId="@product.Id" class="btn btn-dark form-control">
                                    <i class="bi bi-cart"></i>
                                </a>
                            @* }
                            else
                            {
                                @* Buy button with icon 
                                <a asp-area="Customer" asp-controller="Product" asp-action="Buy" asp-route-productId="@product.Id" class="btn btn-dark form-control">
                                    <i class="bi bi-bag"></i> 
                                    Buy
                                </a>
                            } *@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@* Hover effect styling for interactivity *@
<style>
    .card:hover {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transform: scale(1.02);
        transition: all 0.3s ease;
    }
</style>
  
