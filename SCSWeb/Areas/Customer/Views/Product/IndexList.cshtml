@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@model IEnumerable<SCS.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<form asp-controller="Search" asp-action="IndexList" class="m-2">
    <div class="container bg-light">
        <div class="row col-12">
            <div class="mt-2">
                <label for="search" name="search" class="form-check-label"><strong>Product:</strong></label>
                <input class="col-8" type="text" name="search" placeholder="eg. Javascript, Google, etc">
            </div>
        </div>
        <div class="row mb-2 mt-2">
            <div class="col-2">
                <button type="submit" value="search" class="btn btn-outline-primary col-10">
                    Search
                </button>
            </div>
            <div class="col">
                <span class="text-danger">@ViewBag.Message</span>
            </div>
        </div>
    </div>
</form>

<table class="table table-borded table-light table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-area="Customer" asp-controller="Product" asp-action="Details" asp-route-productId="@item.Id">
                   @Html.DisplayFor(modelItem => item.Name)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                    <a asp-area="Customer" asp-controller="Product" asp-action="Details" asp-route-productId="@item.Id"
                    class="btn btn-primary form-control">
                    Details
                </a>
            </td>
            <td>
                @if (SignInManager.IsSignedIn(User))
                {
                    <a asp-area="Customer" asp-controller="Product" asp-action="AddToCart" asp-route-productId="@item.Id"
                        class="btn btn-dark form-control">
                        <i class="bi bi-cart"></i>
                    </a>
                }
                else
                {
                    <a asp-area="Customer" asp-controller="Product" asp-action="Buy" asp-route-productId="@item.Id"
                        class="btn btn-dark form-control">
                        Buy
                    </a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
