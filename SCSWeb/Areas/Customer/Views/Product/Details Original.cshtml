@model Cart

<form method="post">
    <input hidden asp-for="ProductId" /> @* Added for passing to Cart*@ 
    <div class="card border-0 mt-4">
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                     <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        @if (Model.Product.ProductImages != null && Model.Product.ProductImages.Count > 0)
                        {
                            <div id="carouselExampleIndicators" class="carousel  slide" data-bs-ride="carousel">
                                <div class="carousel-indicators">
                                    @foreach (var imageWithIndex in Model.Product.ProductImages
                                        .Select((image, index) => new { Image = image, Index = index }))
                                    {
                                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@imageWithIndex.Index"
                                                class="@(imageWithIndex.Index==0?"active":"")" aria-current="true" aria-label="Slide 1"></button>
                                    }
                                </div>
                                <div class="carousel-inner">
                                    @foreach (var imageWithIndex in Model.Product.ProductImages
                                        .Select((image, index) => new { Image = image, Index = index }))
                                    {
                                        <div class="@(imageWithIndex.Index==0?"carousel-item active":"carousel-item")">
                                            <img src="@imageWithIndex.Image.ImageUrl" class="d-block w-100" alt="...">
                                        </div>
                                    }
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                        } else
                        {
                            <img src="https://placehold.co/600x400/png" class="card-img-top" />
                        }

                    </div>
    
                    <div class="col-12 col-lg-6 offset-lg-1">
                       <div class="row ps-2">
                            <span class="text-black">@Model.Product.Name</span>
                        </div>
                        <div class="row ps-2">
                            <span class="text-warning">@Model.Product.Provider.Name</span>
                        </div>
                        @* <div class="col-12 col-md-6 pb-4"> *@
                        <div class="row ps-2">
                            <span class="text-success">@Model.Product.Category.Name</span>
                        </div>
                        <div class="row ps-2">
                            <a asp-area="Customer" asp-controller="Product" asp-action="Description" asp-route-Id="@Model.Product.Id">
                                <small>Description</small>
                            </a>
                        </div>
                        
                        <div class="row ps-2">
                            <span class="text-dark text-opacity-50 pb-2">
                                @* </div> *@
                                Price: @Model.Product.Price.ToString("c")
                                @* @Model.Price.ToString("c"); *@
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        @* Buttons ------------- *@
        <div class="row pt-2 m-2 img-fluid">
            <div class="col-2 ">
                <button type="submit"
                    class="btn btn-dark bg-gradient w-100"
                        asp-area="Customer" asp-controller="Product" asp-action="AddToCart" asp-route-productId="@Model.Product.Id">
                    <i class="bi bi-cart"></i>
                    Add to Cart
                </button>
                
            </div>
            <div class="col-2">
                <a asp-area="Customer" asp-controller="Product" asp-action="Index"
                   class="btn btn-primary bg-gradient w-100">
                    <small>Back</small>
                </a>
            </div>
        </div>
    </div>
</form>
