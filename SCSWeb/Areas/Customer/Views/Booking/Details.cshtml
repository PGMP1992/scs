@* 
Controller: Booking 
View: Details 
*@
﻿
@using SCS.Models.ViewModels
@model BookingVM

<div class="card shadow border-0 rounded-2 ">

<div class=" card-header bg-primary bg-gradient ml-0 py-3 rounded">
	<div class="row">
		<div class="col-12 text-center">
			<h2 class="text-white py-2">Booking Details</h2>
		</div>
	</div>
</div>

	@* Details ---------------------- *@
	<form>
		<div class="card-body p-2">
			<div class="container rounded">
				<div class="row">
					<div class="col-12 col-lg-6 pb-4">
						<div class="row">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
							</h4>
						</div>

						<div class="row my-1">
							<div class="col-3">
								<label>Date: </label>
							</div>
							<div class="col-9">
								<input asp-for="@Model.BookDate" class="form-control" readonly />
							</div>
						</div>

						<div class="row my-1">
							<div class="col-3">
								<label>Voucher Key:</label>
							</div>
							<div class="col-9">
								<input asp-for="@Model.VoucherId" class="form-control" readonly />
							</div>
						</div>

						<div class="row my-1">
							<div class="col-3">
								<label>Product:</label>
							</div>
							<div class="col-9">
								<input asp-for="@Model.OrderDetails.Product.Name" class="form-control" readonly />
							</div>
						</div>

						<div class="row my-1">
							<div class="col-3">
								<label>User Name:</label>
							</div>
							<div class="col-9">
								<input asp-for="@Model.AppUser.Name" class="form-control" readonly />
							</div>
						</div>

						<div class="row my-1">
							<div class="col-3">
								<label>Email:</label>
							</div>
							<div class="col-9">
								<input asp-for="@Model.AppUser.Email" class="form-control" readonly />
							</div>
						</div>
					</div>
				</div>
				<button asp-controller="Booking" asp-action="BookingList" class="btn btn-outline-primary" style="width:100px;">Back to List</button>
			</div>
		</div>
	</form>
</div>