@* Project   : SCS
   Controller: Booking
   View      : Summary
   Author    : Pedro Martinez
*@

@using SCS.Models.ViewModels
@model BookingVM 

<form method="post">
	<br />
	<div class="container">
		<div class="card border-1">

			<div class="card-header bg-primary bg-gradient ml-0 py-4">
				<div class="row px-2">
					<div class="col-6">
						<h5 class="pt-2 text-white">
							Booking Summary 
						</h5>
					</div>

					<div class="col-6 text-end">
						<a asp-action="BookDate" class="btn btn-outline-light">Back to Booking</a>
					</div>
				</div>
			</div>

			@* Details ---------------------- *@
			<div class="card-body col-lg-6 pb-4">
					<div class="row my-1">
						<div class="col-3">
							<label>Date: </label>
						</div>
						<div class="col-9">
							<input asp-for="@Model.BookDate" class="form-control" readonly/>
						</div>
					</div>
							
					<div class="row my-1">
						<div class="col-3">
							<label>Voucher Key:</label>
						</div>
						<div class="col-9">
							<input asp-for="@Model.VoucherId" class="form-control" readonly />
						</div>
					</div>

					<div class="row my-1">
						<div class="col-3">
							<label>Product:</label>
						</div>
						<div class="col-9">
							<input asp-for="@Model.OrderDetails.Product.Name" class="form-control" readonly />
						</div>
					</div>

					<div class="row my-1">
						<div class="col-3">
							<label>User Name:</label>
						</div>
						<div class="col-9">
							<input asp-for="@Model.AppUser.Name" class="form-control" readonly />
						</div>
					</div>

					<div class="row my-1">
						<div class="col-3">
							<label>Email:</label>
						</div>
						<div class="col-9">
							<input asp-for="@Model.AppUser.Email" class="form-control" readonly/>
						</div>
					</div>
					<button type="submit" value="Summary" class="btn btn-primary mt-3">Confirm Booking</button>

				</div>

		</div>
	</div>
</form>