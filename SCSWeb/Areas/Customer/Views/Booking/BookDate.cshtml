        <div class="container bg-white bg-light">
            
            <div class="row col-6">
                <div class="mt-2">
                    <label for="@Model.VoucherId" class="label"><strong>Voucher Key:</strong></label>
                    <input asp-for="@Model.VoucherId" class="form-control col-4" type="text" readonly>
                </div>
                <div class="mt-2">
                    <label class="form-check-label"><strong>Product:</strong></label>
                    <input asp-for="@Model.OrderDetails.Product.Name" class="form-control col-6" type="text" readonly>
                </div>

            </div>
        </div>
    
        @* Show Cert Slots ---------------------------- *@
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th class="text-success-emphasis">
                        Slot Name
                    </th>
                    <th class="text-success-emphasis">
                        Slot Period
                    </th>
                    <th class="text-success-emphasis">
                        Date
                    </th>
                    <th class="text-success-emphasis">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.CDayList)
                {
                    <tr>
                         <td>
                            @obj.CertificationSlot.Name
                        </td>
                        <td>
                            @obj.CertificationSlot.StartDate - @obj.CertificationSlot.EndDate
                        </td>
                        <td>
                        <input asp-for="@obj.Date" class="form-control">
                    </td>
                        <td>
                            <div>
                                <a asp-area="Customer" asp-controller="Booking" asp-action="Summary"
                                    asp-route-bDate="@obj.Date" class="btn btn-primary mx-3">
                                    <i class="bi bi-pencil-square"></i>
                                    Book
                                </a>
                            </div>
                        </td>
                    </tr>
                } 

