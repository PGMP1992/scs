@using SCS.Models.ViewModels
@model BookingVM

<div class="card border-1 mt-4">
    <div class="card-header bg-primary bg-gradient text-light ml-0 py-4">
        <div class="row px-4">
            <div class="col-6">
                <h5 class="pt-2 text-white">
                    Book Certification
                </h5>
            </div>
        </div>
    </div>

    <form asp-area="Customer" asp-controller="Booking" asp-action="Book" class="m-2">
        <div class="container bg-white">
            <div class="row">
                <div class="mt-2">
                    <div class="col-2">
                        <label for="voucherId" class="form-check-label"><strong>Voucher Key:</strong></label>
                    </div>
                    <div class="col-6">
                        <input id="voucherId" class="form-control col-8" type="text" name="voucherId" placeholder="Enter a Voucher Key">
                    </div>
                </div>
            </div>
            @* <div class="row mb-2 mt-2">
                <div class="col-2">
                    <button type="submit" value="voucherId" class="btn btn-outline-primary col-10">
                        Validate
                    </button>
                </div>
                <div class="col">
                    <span class="text-danger">@ViewBag.Message </span>
                </div>
            </div> *@
        </div>
    
        <table class="table table-borded table-light table-striped ">
            <thead>
                <tr>
                    <th class="text-success-emphasis">
                        Name
                    </th>
                    <th class="text-success-emphasis">
                        Week Day
                    </th>
                    <th class="text-success-emphasis">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.Slots)
                {
                    <tr>
                        <td>
                            @obj.Name
                        </td>
                        <td>
                            @obj.StartDate.ToShortDateString()
                        </td>
                        <td>
                            <div class="w-25 btn-group" role="group">
                                <a asp-controller="Booking" asp-action="Book" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>
                                    Book
                                </a>
                                
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
     </form>
</div>