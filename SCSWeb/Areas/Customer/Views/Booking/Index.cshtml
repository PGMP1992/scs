@using SCS.Models.ViewModels

@model BookingVM

<form method="post">
    <br />
    <div class="card border-1">
        <div class="card-header bg-primary bg-gradient text-light ml-0 py-4">
            <div class="row px-4">
                <div class="col-6">
                    <h5 class="pt-2 text-white">
                        Book Certification
                    </h5>
                </div>
             </div>
        </div>

        <div class="card-boddy bg-white border-0">
            <div class="row col-12 px-4">
                <div class="col-3">
                    <h5 class="pt-2">
                        Please enter a Voucher: 
                    </h5>
                </div>
                <div class="col-9">
                    <h5 class="pt-2">
                        <input type="text" name="voucher" value="" />
                    </h5>
                </div>
            </div>

            <table class="table table-borded table-light table-striped ">
                <thead>
                    <tr>
                        <th class="text-success-emphasis">
                            Name
                        </th>
                        <th class="text-success-emphasis">
                            Week Day
                        </th>
                        <th class="text-success-emphasis">

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.Slots)
                    {
                        <tr>
                            <td>
                                @obj.Name
                            </td>
                            <td>
                                @obj.StartDate
                            </td>

                            <td>
                                <div class="w-25 btn-group" role="group">
                                    <a asp-controller="Booking" asp-action="Book" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i>
                                        Book
                                    </a>
                                    @* <a asp-controller="Categories" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i>
                                        Delete
                                    </a> *@
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
            
        @* <div class="card-footer bg-white border-0">
                
            <div class="row">
                <div class="col-md-4 offset-md-4">
                    <ul class="list-group mb-4">
                        <li class="d-flex justify-content-between align-items-center">
                            @*     <h5 class="text-dark fw-semibold text-uppercase"> Total: </h5>
                                <h4 class="text-dark fw-bolder">@Model.OrderHeader.OrderTotal.ToString("c")</h4> 
                        </li>
                    </ul>
                </div> 
            </div>
                
            <div class="row">
                <div class="col-md-2 offset-md-5">
                    <a asp-action="Book" class="btn btn-primary border-0 bg-gradient w-100 py-2">Book</a>
                </div>
            </div>

        </div> *@
    </div>
</form>
