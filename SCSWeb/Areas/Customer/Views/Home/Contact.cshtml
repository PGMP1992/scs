@using SCS.Models.ViewModels
@model ContactVM

<div class="container">
    <div>
        <h2>Contact Us</h2>
        <p>Swing by for a cup of coffee, or leave us a message:</p>
    </div>
    <div class="row">
        <div class="col-md-6">
            <img src="~/images/map.jpg" class="img-fluid rounded-start"/> 
        </div>
        <div class="col-md-6 ">
            <form method="post" class="mt-3" >
                
                    <div class="row mb-2">
                    <div class="col-2">
                        <label class="text-">Name:</label>
                    </div>
                    <div class="col-10">
                        <input asp-for="Name" type="text" class="form-control border-1" placeholder="Your name.." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="row mb-2">
                    <div class="col-2">
                        <label>Email:</label>
                    </div>
                    <div class="col-10">
                        <input asp-for="Email" type="text" class="form-control border-1" placeholder="Your Email.." />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-2">
                        <label>Subject:</label>
                    </div>
                    <div class="col-10">
                        <textarea id="subject" asp-for="Message" placeholder="Write something.." style="height:200px; width: 100%"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                </div>
                                                
                <input class="btn btn-primary" type="submit"/>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
