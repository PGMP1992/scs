@model UserVM

<div class="card shadow border-0 mt-4 rounded-2 ">

    <div class=" card-header bg-primary bg-gradient ml-0 py-3 rounded">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Manage User Role</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="AppUser.Id" hidden />
            <input asp-for="AppUser.AddressId" hidden />
            <div class="border p-3 align-content-between">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-6">
                    <input asp-for="AppUser.Name" readonly class="form-control border-1" />
                    <label asp-for="AppUser.Name" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-6">
                    <select asp-for="AppUser.Role" asp-items="@Model.RoleList" class="form-select"></select>
                </div>
                @* Address  ----------------- *@
                <div class="container border bg-light ">
                    <div class="text-black">Address</div>
                    <div class="form-floating py-2 col-6">
                        <input asp-for="AppUser.Address.Street1" class="form-control border-1" />
                        <label asp-for="AppUser.Address.Street1" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-2 col-6">
                        <input asp-for="AppUser.Address.Street2" class="form-control border-1" />
                        <label asp-for="AppUser.Address.Street2" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-2 col-6">
                        <input asp-for="AppUser.Address.City" class="form-control border-1" />
                        <label asp-for="AppUser.Address.City" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-2 col-6">
                        <input asp-for="AppUser.Address.State" class="form-control border-1" />
                        <label asp-for="AppUser.Address.State" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-2 col-6">
                        <input asp-for="AppUser.Address.Postcode" class="form-control border-1" />
                        <label asp-for="AppUser.Address.Postcode" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-2 col-6">
                        <input asp-for="AppUser.Address.Country" class="form-control border-1" />
                        <label asp-for="AppUser.Address.Country" class="ms-2"></label>
                    </div>
                </div>
                @* Buttons  --------------- *@
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a  asp-action="Index" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }

