@model List<ProviderVM>

<div class="card shadow border-0 mt-4 rounded-2 ">
    <div class=" card-header bg-primary bg-gradient ml-0 py-3 rounded">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Providers</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 mb-3">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Providers" asp-action="Upsert" class="btn btn-primary rounded">
                    <i class="bi bi-plus-circle"></i>
                    New Provider
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-sm-3">
                <thead class="table-success">
                <tr>
                    <th>Name</th>
                    <th>Contact Name</th>
                    <th>Contact Email</th>
                    <th>Contact Phone</th>
                    <th></th>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Provider.Name))
                {
                    <tr>
                        <td>
                            <a asp-controller="Providers" asp-action="Upsert" asp-route-id="@obj.Provider.Id" class="text-black
    ">
                                @obj.Provider.Name
                            </a>
                        </td>

                        <td>
                            @obj.Provider.ContactName
                        </td>
                         <td>
                            @obj.Provider.ContactEmail
                        </td>
                        <td>
                            @obj.Provider.ContactPhone
                        </td>
                        <td>
                            <div class="w-60 btn-group" role="group">
                                <a asp-controller="Providers" asp-action="Upsert" asp-route-id="@obj.Provider.Id" class="btn btn-primary mx-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                            
                                @if (@obj.OkToDelete)
                                {
                                    <form method="post" asp-action="Delete" asp-route-id="@obj.Provider.Id" id="deleteform" onsubmit="deleteProvider()">
                                        <input asp-for="@obj.Provider.Id" hidden />
                                        <button type="submit" class="btn btn-danger mx-1">
                                            <i class="bi bi-trash-fill"></i>
                                            Delete
                                        </button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
    <script>
        function deleteProvider(e) {
            e.preventDefault();
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    const deleteform = document.getElementById('deleteform');
                    deleteform.submit();
                }
            })
        }
    </script>
}
