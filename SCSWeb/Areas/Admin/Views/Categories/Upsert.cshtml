@model Category

<div class="card shadow border-0 mt-4 ">
    <div class="card-header bg-primary bg-gradient m-lg-0 py-3 rounded">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id != 0 ? "Edit category" : "New category")</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border border-0">
                <input asp-for="Id" type="hidden" />
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-1 " />
                    <label asp-for="Name" class="mt-2 "></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-1 " />
                    <label asp-for="Description" class="mt-2 "></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="w-50 btn-group" role="group">
                        @* Insert Mode - PM *@
                        @if (Model.Id == 0)
                        {
                            <button type="submit" class="btn btn-primary mx-1">Save</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary mx-1">Update</button>
                        }
                        <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn btn-secondary mx-1">
                            Back to List
                        </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
            <partial name="_ValidationScriptsPartial" />
            <script>
                function displayAlert() {
                    Swal.fire("Example with SweetAlert2");
                }
            </script>
    }
}