@model CertificationSlotVM

<div class="card shadow border-0 mt-4 mb-4">

    <div class="card-header bg-primary bg-gradient ml-0 py-4 rounded">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">@(Model.CertificationSlot.Id != 0 ? "Edit" : "New") Certification Slot</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="@Model.CertificationSlot.Id" hidden />
            <input asp-for="@Model.CertificationSlot.ShowDays" hidden />
           

            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.CertificationSlot.Name" type="text" class="form-control border-1" />
                            <label asp-for="@Model.CertificationSlot.Name" class="mt-2 "></label>
                            <span asp-validation-for="@Model.CertificationSlot.Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.CertificationSlot.StartDate" type="date" class="form-control border-1" />
                            <label asp-for="@Model.CertificationSlot.StartDate" class="mt-2 "></label>
                            <span asp-validation-for="CertificationSlot.StartDate" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.CertificationSlot.EndDate" type="date" asp-action ="checkDate" class="form-control border-1" />
                            <label asp-for="@Model.CertificationSlot.EndDate" class="mt-2 "></label>
                            <span asp-validation-for="CertificationSlot.EndDate" class="text-danger"></span>
                        </div>
               
                        @if (Model.CertificationSlot.ShowDays && Model.CertificationSlot.EndDate>Model.CertificationSlot.StartDate)
                        {

                            <table class="table table-bordered  table-striped table-light" style="width:100%">
                                <thead>
                                    <tr>
                                        <th class="text-success-emphasis">
                                            Date
                                        </th>
                                        <th class="text-success-emphasis">
                                            Week Day
                                        </th>
                                        <th class="text-success-emphasis">
                                            Certification
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i=0;i<Model.CDayList.Count();i++) 
                                    {

                                        <input hidden asp-for="@Model.CDayList[i].Id" />
                                        
                                        <tr>
                                            <td>
                                                @Model.CDayList[i].Date
                                                
                                            </td>
                                            <td>
                                                @Model.CDayList[i].Date.DayOfWeek
                                               
                                            </td>
                                            <td>   
                                                <input asp-for="@Model.CDayList[i].IsCertDay" type="checkbox" class=" form-check-input" />
                                            </td>
                                        </tr>

                                    } 
                                </tbody>
                            </table>

                        }

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.CertificationSlot.Id == 0)
                                {
                                    <button type="submit" asp-action="ShowDays"  class="btn btn-primary form-control rounded">Save</button>
                                }
                                else
                                {
                                      <button type="submit" class="btn btn-primary form-control rounded">Update</button>
                                }
                            </div>

                            <div class="col-6 col-md-3">
                                <a asp-area="Admin" asp-controller="CertificationSlots" asp-action="Index" class="btn btn-secondary rounded form-control">Back to List</a>
                            </div>
                         
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}