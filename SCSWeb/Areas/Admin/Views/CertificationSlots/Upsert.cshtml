@model CertificationSlot

<div class="card shadow border-0 mt-4 mb-4">
    <div class="card-header bg-primary bg-gradient m-lg-0 py-2 rounded">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">@(Model.Id != 0 ? "Edit" : "New") Certification Slot</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />

            <div class="row">
                <div class="col-10">
                    <div class="border p-3">

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Name" type="text" class="form-control border-1" />
                            <label asp-for="Name" class="mt-2 "></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="StartDate" type="date" class="form-control border-1" />
                            <label asp-for="StartDate" class="mt-2 "></label>
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="EndDate" type="date" class="form-control border-1" />
                            <label asp-for="EndDate" class="mt-2 "></label>
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                      

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Id == 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control rounded">Save</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control rounded">Update</button>
                                }


                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-area="Admin" asp-controller="CertificationSlots" asp-action="Index" class="btn btn-secondary rounded form-control">Back to List</a>

                            </div>
                            <div class="col-6 col-md-3">
                                <button type="submit" asp-action="Delete" class="btn btn-danger form-control rounded">Delete</button>

                            </div>
                           
                        </div>

                    </div>
                </div>
               
            </div>


        </form>
    </div>
</div>


@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />

    }
}