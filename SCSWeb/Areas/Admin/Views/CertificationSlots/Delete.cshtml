@model CertificationSlot

<div class="card shadow border-0 mt-4 mb-4">
    
    <div class="card-header bg-primary bg-gradient ml-0 py-4 rounded">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Delete Certification Slot</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <h3>Are you sure you want to delete?</h3>

            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input disabled asp-for="StartDate" class="form-control border-1" />
                            <label asp-for="StartDate" class="mt-2 "></label>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input disabled asp-for="EndDate" class="form-control border-1" />
                            <label asp-for="EndDate" class="mt-2"></label>
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-danger form-control rounded">Delete</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-area="Admin" asp-controller="CertificationSlots" asp-action="Index" 
                                    class="btn btn-primary rounded form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


