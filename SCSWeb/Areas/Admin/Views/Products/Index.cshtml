@model List<Product>

<div class="card shadow border-0 mt-4 mb-4">

    <div class=" card-header bg-primary bg-gradient ml-0 py-3  rounded">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Products</h2>

            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Products" asp-action="Upsert" class="btn btn-primary rounded">
                    <i class="bi bi-plus-circle"></i>
                    New Product
                </a>
            </div>
        </div>

        <table id="tblData" class="table table-bordered  table-striped table-light" style="width:100%">
            <thead>
                <tr>
                    <th class="text-success-emphasis">
                        Name
                    </th>
                    <th class="text-success-emphasis">
                        Category
                    </th>
                    <th class="text-success-emphasis">
                        Provider
                    </th>
                 
                    <th class="text-success-emphasis">
                       Price
                    </th>
                    <th class="text-success-emphasis">
                        Certification Slot
                    </th>
                    <th class="text-success-emphasis">
                       Status
                    </th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Name))
                {
                    <tr>
                        <td>
                            <a asp-controller="Products" asp-action="Upsert" asp-route-id="@obj.Id" class="text-black">
                                @obj.Name
                            </a>
                        </td>

                        <td>
                            @obj.Category.Name
                        </td>
                        <td>
                            @obj.Provider.Name
                        </td>
                        <td>
                            @obj.Price
                        </td>
                        <td>
                            @if(obj.CertSlotId>0)
                            {
                                @obj.CertificationSlot.Name
                            }
                           
                        </td>
                        <td>
                            @obj.Status
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Products" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Products" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

