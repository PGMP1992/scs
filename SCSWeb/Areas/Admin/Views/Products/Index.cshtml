@model List<ProductVM>

<div class="card shadow border-0 mt-4 mb-4">

    <div class=" card-header bg-primary bg-gradient ml-0 py-3  rounded">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Products</h2>

            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Products" asp-action="Upsert" class="btn btn-primary rounded">
                    <i class="bi bi-plus-circle"></i>
                    New Product
                </a>
            </div>
        </div>

        <table id="tblData" class="table table-bordered  table-striped table-light" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th >
                        Category
                    </th>
                    <th>
                        Provider
                    </th>
                 
                    <th>
                       Price
                    </th>
                    <th>
                        Certification Slot
                    </th>
                   
                    <th></th>
                    <th></th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Product.Name))
                {
                    <tr>
                        <td>
                            <a asp-controller="Products" asp-action="Upsert" asp-route-id="@obj.Product.Id" class="text-black">
                                @obj.Product.Name
                            </a>
                        </td>

                        <td>
                            @obj.Product.Category.Name
                        </td>
                        <td>
                            @obj.Product.Provider.Name
                        </td>
                        <td>
                            @obj.Product.Price
                        </td>
                        <td>
                            @if (obj.Product.CertSlotId > 0)
                            {
                                @obj.Product.CertificationSlot.Name
                            }
                           
                        </td>
                     
                        <td>
                            <div>
                                <a asp-controller="Products" asp-action="Upsert" asp-route-id="@obj.Product.Id" class="btn btn-primary mx-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                            </div>
                         </td>
                        <td>
                            <div>
                                @if (@obj.OkToDelete)
                                {
                                    <form method="post" asp-action="Delete" asp-route-id="@obj.Product.Id" id="deleteform" onsubmit="test(event)">
                                        <input asp-for="@obj.Product.Id" hidden />
                                        <button type="submit" class="btn btn-danger">
                                            <i class="bi bi-trash-fill"></i>
                                            Delete
                                        </button>
                                    </form>
                                }
                            </div>
                        </td>
                      
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
    <script>
        function test(e) {
            e.preventDefault();
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    const deleteform = document.getElementById('deleteform');
                    deleteform.submit();
                }
            })
        }
    </script>
}
