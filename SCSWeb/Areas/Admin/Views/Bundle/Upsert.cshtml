@model BundleVM
<div class="card shadow border-0 mt-4 ">
    <div class="card-header bg-primary bg-gradient m-lg-0 py-2 rounded">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">@(Model.Bundle.Id != 0 ? "Edit bundle" : "New bundle")</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <input asp-for="@Model.Bundle.Id" type="hidden" />
                <input asp-for="@Model.Bundle.ProductId1" type="hidden"  />
                <input asp-for="@Model.Bundle.ProductId2" type="hidden" />
                <input asp-for="@Model.Bundle.ProductId3" type="hidden" />

                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Bundle.Name" class="form-control border-1 " />
                    <label asp-for="@Model.Bundle.Name" class="mt-2 "></label>
                    <span asp-validation-for="@Model.Bundle.Name" class="text-danger"></span>
                </div>
                <h4>Contains</h4>
                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.Bundle.Product1.Id" asp-items="@Model.ProductList1" class="form-select border-1">
                        <option disabled selected>--Select Product--</option>
                    </select>
                    <label asp-for="@Model.Bundle.Product1"  class="mt-2  "></label>

                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.Bundle.Product2.Id" asp-items="@Model.ProductList2" class="form-select border-1">
                        <option disabled selected>--Select Product--</option>
                    </select>
                    <label asp-for="@Model.Bundle.Product2" class="mt-2 "></label>

                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.Bundle.Product3.Id" asp-items="@Model.ProductList3" class="form-select border-1">
                        <option disabled selected>--Select Product--</option>
                    </select>
                    <label asp-for="@Model.Bundle.Product3" class="mt-2 "></label>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Bundle.Price" class="form-control border-1 " />
                    <label asp-for="@Model.Bundle.Price" class="mt-2 "></label>
                    <span asp-validation-for="@Model.Bundle.Price" class="text-danger"></span>

                </div>


                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        @* Insert Mode - PM *@
                        @if (Model.Bundle.Id == 0)
                        {
                            <button type="submit" class="btn btn-primary form-control rounded">Save</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control rounded">Update</button>
                        }
                    </div>

                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Bundle" asp-action="Index" class="btn btn-secondary form-control rounded">
                            Back to List
                        </a>
                    </div>

                    <div class="col-6 col-md-3">
                        <button type="submit" asp-action="Delete" class="btn btn-danger form-control rounded">Delete</button>
                    </div>
                 
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}