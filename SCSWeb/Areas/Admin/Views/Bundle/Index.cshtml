@model List<Bundle>

<div class="card shadow border-0 mt-4 mb-4">

    <div class=" card-header bg-primary bg-gradient ml-0 py-3  rounded">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Bundles</h2>

            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Bundle" asp-action="Upsert" class="btn btn-primary rounded">
                    <i class="bi bi-plus-circle"></i>
                    New Bundle
                </a>
            </div>
        </div>

        <table id="tblData" class="table table-bordered  table-striped table-light" style="width:100%">
            <thead>
                <tr>
                    <th class="text-success-emphasis">
                        Name
                    </th>
                    <th class="text-success-emphasis">
                        Product 1
                    </th>
                    <th class="text-success-emphasis">
                        Product 2
                    </th>
                    <th class="text-success-emphasis">
                        Product 3
                    </th>
                    <th class="text-success-emphasis">
                        Price
                    </th>
                    <th class="text-success-emphasis">

                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Name))
                {
                    <tr>
                        <td>
                            <a asp-controller="Products" asp-action="Upsert" asp-route-id="@obj.Id" class="text-black
        ">
                                @obj.Name
                            </a>
                        </td>

                        <td>
                            Category: @obj.Product1.Category.Name <br/>
                            Name: @obj.Product1.Name
                            
                        </td>
                        <td>
                            Category: @obj.Product2.Category.Name <br />
                            Name: @obj.Product1.Name
                        </td>
                        <td>
                            Category: @obj.Product3.Category.Name <br />
                            Name: @obj.Product1.Name
                        </td>
                        <td>
                            @obj.Price.ToString("C")
                        </td>
                       
                        <td>
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Bundle" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Bundle" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-1">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

