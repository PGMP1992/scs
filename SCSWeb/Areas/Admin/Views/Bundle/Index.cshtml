@model List<BundleVM>

<div class="card shadow border-0 mt-4 mb-4">

    <div class=" card-header bg-primary bg-gradient ml-0 py-3  rounded">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Bundles</h2>

            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Bundle" asp-action="Upsert" class="btn btn-primary rounded">
                    <i class="bi bi-plus-circle"></i>
                    New Bundle
                </a>
            </div>
        </div>

        <table  class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th class="text-success-emphasis">
                        Name
                    </th>
                    <th class="text-success-emphasis">
                        Product 1
                    </th>
                    <th class="text-success-emphasis">
                        Product 2
                    </th>
                    <th class="text-success-emphasis">
                        Product 3
                    </th>
                    <th class="text-success-emphasis">
                        Price
                    </th>
                    <th class="text-success-emphasis">

                    </th>
                    <th class="text-success-emphasis">

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Bundle.Name))
                {
                    <tr>
                        <td>
                                @obj.Bundle.Name 
                        </td>

                        <td>
                            Category: @obj.Bundle.Product1.Category.Name <br />
                            Name: @obj.Bundle.Product1.Name
                            
                        </td>
                        <td>
                            Category: @obj.Bundle.Product2.Category.Name <br />
                            Name: @obj.Bundle.Product1.Name
                        </td>
                        <td>
                            Category: @obj.Bundle.Product3.Category.Name <br />
                            Name: @obj.Bundle.Product1.Name
                        </td>
                        <td>
                            @obj.Bundle.Price.ToString("C")
                        </td>
                       
                        <td>
                            <div>
                                <a asp-controller="Bundle" asp-action="Upsert" asp-route-id="@obj.Bundle.Id" class="btn btn-primary form-control">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a> 
                            </div>
                        </td>
                        <td>
                            @if (@obj.OkToDelete)
                            {
                                <form method="post" asp-action="Delete" asp-route-id="@obj.Bundle.Id" id="deleteform" onsubmit="deleteBundle()">
                                    <input asp-for="@obj.Bundle.Id" hidden />
                                    <button type="submit" class="btn btn-danger form-control">
                                        <i class="bi bi-trash-fill"></i>
                                        Delete
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
    <script>
        function deleteBundle(e) {
            e.preventDefault();
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    const deleteform = document.getElementById('deleteform');
                    deleteform.submit();
                }
            })
        }
    </script>
}
