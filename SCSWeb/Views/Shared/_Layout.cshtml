@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http 
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject IHttpContextAccessor HttpContextAccessor 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <title>@ViewData["Title"] SCS Mock Website</title>

    @* Bootstrap *@
    



    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@7.2.3/css/flag-icons.min.css" />

    @* Font *@ 

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@400;600;800&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&display=swap">
    @* Custom css *@

    <link rel="stylesheet" href="~/SCS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom-styles.css" asp-append-version="true">

     @* Datatables *@ 

    <link rel="stylesheet" href="//cdn.datatables.net/2.1.5/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
   
</head>
<body>
    <header>

       @*  Notification bar 

        @if (!SignInManager.IsSignedIn(User))
        {
            <div class="notification-bar text-center py-2" style="background-color: #dff0ed;">
                <a href="#" class="text-decoration-none text-dark">
                    Discount for bundles of certification and learning material <strong>Read more here.</strong>
                </a>
            </div>
        } *@

        <div class="branding-bar py-3" style="background-color: white; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2); ">
            <div class="container d-flex justify-content-between align-items-center">
                <div class="text-center flex-grow-1" style="font-family: 'Playfair Display', serif;  color: black; line-height: 1.2; margin-right: 32px; text-rendering: optimizeLegibility;">
                    <div style="font-size: 20px; font-weight: 400; letter-spacing: 1px;">
                        SCANDINAVIAN
                    </div>
                    <div style="font-size: 13px; margin-top: 4px; margin-bottom: 9px; letter-spacing: 0.5px; ">
                        CERTIFICATION SERVICES
                    </div>
                </div>
            </div>
        </div>


        <!-- Navigation Bar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <!-- Home -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">HOME</a>
                        </li>

                        <!-- Products Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">PRODUCTS</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-area="Customer" asp-controller="Product" asp-action="Index">PRODUCTS</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="Customer" asp-controller="Product" asp-action="IndexList">PRODUCT LINE</a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Calendar" asp-action="Index">AVAILABLE DATES</a>
                        </li>

                    </ul>

                    <!-- Login/Register -->
                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <!-- User Profile -->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                    <i class="bi bi-person-check"></i> Hello, @User.Identity.Name
                                </a>
                            </li>

                            <!-- Logout -->
                            <li class="nav-item">
                                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                                      asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">
                                        <i class="bi bi-box-arrow-in-right"></i> Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <!-- Register -->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
                                    REGISTER
                                </a>
                            </li>

                            <!-- Login -->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
                                    LOGIN
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer>
        <partial name="_FooterPartial" />
    </footer>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/2.1.5/js/dataTables.min.js" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/vc5poozxpd6tn43acv2een8s0y2kl3usq3p4pizlga21bzme/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>