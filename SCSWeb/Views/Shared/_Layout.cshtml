    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" integrity="sha384-..." crossorigin="anonymous">

    <!-- Flag Icons -->
    @* <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@7.2.3/css/flag-icons.min.css" integrity="sha384-..." crossorigin="anonymous"> *@

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/SCS.styles.css" asp-append-version="true">
       
    <!-- calendar -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.css" rel="stylesheet" />

    @* Font *@
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@400;600;800&display=swap">

    @* Custom css *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true">

    @* Datatables *@
    <link rel="stylesheet" href="//cdn.datatables.net/2.1.5/css/dataTables.dataTables.min.css" />

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

</head>

<body>
    <header>
        <partial name="_NavPartial" />
    </header>

    <div class="container pt-3">
        <main role="main" class="pb-3 pt-5">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <div class="modal fade" id="infoModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">SCS AB App Functionality</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="h6 text-info">Following are the User Accounts that exist by default (Password: Admin123*): </div>
                    <p>Admin User :      <b>admin@email.com</b> </p>
                    <p>Individual User : <b>user1@email.com</b></p>

                    <div class="h6 text-info">How to use the website:</div>
                    <p>This website is intended to serve as a demo application.</p>
                    <p>Users can place an order after adding items to Cart.</p>
                    <p>Once an Order is placed you can login as Admin User and manage orders to see the flow of the application.</p>
                    <p>In order to place an order you can use any test credit card number supported by Stripe.</p>
                    <p>A default example is 4242 4242 4242 4242, valid date, any 3 digit CVV.</p>

                    <div class="h6 text-info">How to use a Voucher</div>
                    <p>Voucher Keys are used for Certifications only.</p>
                    <p>Check the Calendar for dates available.</p>
                    <p>Once an Order has been created every item in the order will have a Voucher Key.</p>
                    <p>Under Booking/Book menu, use the Voucher Key to validate.</p>
                    <p>Once Voucher is validated use it to create a Booking.</p>


                    <div class="row justify-content-between">
                        <div class="col-6">
                            <a href="mailto:pedro@dkltd.net">
                                <i class="bi bi-envelope-fill"></i>
                                Email
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="https://www.linkedin.com/in/pedro-martinez-70077691" target="_blank">
                                <i class="bi bi-linkedin"></i>
                                Linkedln
                            </a>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    </div>
    <footer>
        <partial name="_FooterPartial" />
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js" integrity="sha512-7Pi/otdlbbCR+LnW+F7PwFcSDJOuUJB3OxtEHbg4vSMvzvJjde4Po1v4BR9Gdc9aXNUNFVUY+SK51wWT8WF0Gg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

   @*  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script> *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/2.1.5/js/dataTables.min.js" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/p8w2oqde838ocdiaqqz02i63nctjqrud6yel6g2i9p87770v/tinymce/7/tinymce.min.js"
            referrerpolicy="origin"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/tooltip.js/dist/umd/tooltip.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>