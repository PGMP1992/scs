                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="Customer" asp-controller="Product" asp-action="Index">
                        Products
                    </a>
                </li>


                @* Bookings -------------------------------- *@
                <li class="nav-item dropdown">
                    <a class="nav-link text-light dropdown-toggle" data-bs-toggle="dropdown"
                       href="#" role="button" aria-expanded="false">
                        Bookings
                    </a>

                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item" asp-area="Customer" asp-controller="Booking" asp-action="Calendar">
                                Certification Calendar
                            </a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li>
                                <a class="dropdown-item" asp-area="Customer" asp-controller="Booking" asp-action="Voucher">
                                    Book
                                </a>
                            </li>

                            <li>
                                <a class="dropdown-item" asp-area="Customer" asp-controller="Booking" asp-action="BookingList">
                                    Bookings
                                </a>
                            </li>

                        }
                    </ul>
                </li>

                @* Orders ----------------------*@
                @if (SignInManager.IsSignedIn(User))
                {
                    <li>
                        <a class="nav-link text-light" asp-area="Admin" asp-controller="Order" asp-action="Index">
                            Orders
                        </a>
                    </li>
                }

                @* Admin ----------------------*@
                @if (User.IsInRole(SD.Role_Admin))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link text-light dropdown-toggle" data-bs-toggle="dropdown"
                           href="#" role="button" aria-expanded="false">
                            Admin
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Categories" asp-action="Index">
                                    Categories
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Providers" asp-action="Index">
                                    Providers
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Products" asp-action="Index">
                                    Products
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Bundle" asp-action="Index">
                                    Bundles
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="CertificationSlots" asp-action="Index">
                                    Certification Slots
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            @* Users --------------------*@
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Users" asp-action="Index">
                                    <i class="bi bi-people-fill"></i>
                                    Users
                                </a>
                            </li>
                        </ul>
                    </li>
                }

                @* User Profile/ Dashboard  ---------------------- *@
                @if (SignInManager.IsSignedIn(User))
                {
                    <li>
                        <a class="nav-link text-light" asp-area="Customer" asp-controller="Users" asp-action="Profile">
                            <i class="bi bi-person-fill"></i>
                            Profile
                        </a>
                    </li>

                    @* Shopping Cart ---------------------- *@
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="Customer" asp-controller="Cart" asp-action="Index">
                            @await Component.InvokeAsync("Cart")
                        </a>
                    </li>
                }

                @* About ---------------------- *@
                <li class="nav-item">
                    <a class="nav-link text-light" href="">
                        About
                    </a>
                </li>

                @* Contact ---------------------- *@
                <li class="nav-item">
                    <a class="nav-link text-light" href="">
                        Contact
                    </a>
                </li>
            </ul>

            @* Login/Register/ Languages ---------------------- *@
            <partial name="_LoginPartial" />
