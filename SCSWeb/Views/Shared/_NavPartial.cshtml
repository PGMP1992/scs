            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                @* Home ----------------------*@
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="Customer" asp-controller="Home" asp-action="Index">
                        Home
                    </a>
                </li>

